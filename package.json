{
  "name": "personal-server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "lerna run build",
    "clean": "(lerna clean -y || rm -rf apps/*/node_modules) && rm -rf node_modules",
    "d-build": "npm run build && docker build -t l3bowski/personal-server:latest .",
    "d-push": "docker push l3bowski/personal-server:latest",
    "d-start": "docker run -d --name personal-server -e PORT=80 -p 80:80 l3bowski/personal-server:latest",
    "d-stop": "docker stop personal-server && docker rm personal-server",
    "prepare": "lerna bootstrap",
    "prepare:prod": "lerna bootstrap -- --production",
    "start": "node index.js"
  },
  "engines": {
    "node": "8.9"
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "ejs": "^2.6.1",
    "express": "^4.17.1",
    "modena": "^2.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "lerna": "^3.15.0"
  }
}
